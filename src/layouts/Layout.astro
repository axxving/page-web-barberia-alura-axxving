---
import "../style/style.css";
import Spinner from "../components/Spinner.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <!-- Caracteres -->
    <meta charset="UTF-8" />

    <!-- Autor de la página -->
    <meta name="author" content="axxving" />

    <!-- Descripcion de la página -->
    <meta
      name="description"
      content="Bienvenido a Barbería Alura, tu destino para un corte de cabello excepcional y un cuidado personalizado. Nuestro equipo de barberos expertos te brinda un servicio de calidad en un ambiente acogedor y amigable. ¡Visítanos y descubre la experiencia de Barbería Alura!"
    />

    <!-- Palabras clave -->
    <meta
      name="keywords"
      content="Barbería Alura, corte de cabello, barbería, cuidado personalizado, barberos expertos, ambiente acogedor, experiencia única, estilo de vida, belleza masculina"
    />

    <!-- Asegurando responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icono de la página -->
    <link rel="shortcut icon" href="/public/imgs/Logos/logo-blanco.png" type="image/x-icon">

    <!-- Importando bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Iconos de bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Estilos personalizados CSS -->
    <link rel="stylesheet" href="css/styles.css" />

    <!-- Boxicons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/boxicons/2.0.7/css/boxicons.min.css"
    />

    <!-- Enlaces CDN de Swiper -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper/swiper-bundle.min.css"
    />

    <!-- Titulo de la página web -->
    <title>Barberia Alura | {title}</title>
  </head>

  <body>
    <Spinner />
    <slot />
  </body>
</html>
