<style>
  @import url("https://fonts.googleapis.com/css2?family=Sansita:ital,wght@0,400;0,700;0,800;0,900;1,400;1,700;1,800;1,900&display=swap");

  #header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: transparent;

    z-index: 1000;
  }

  .nombre-pagina {
    font-family: "Sansita", sans-serif !important;
    color: var(--blanco);
  }

  .nav-link {
    color: #fff;
  }

  .navbar-nav .nav-link:hover,
  .navbar-nav .nav-link:focus,
  .navbar-nav .nav-link:active {
    color: var(--blanco);
    /* Mantener el color del texto igual en todos los estados */
    background-color: transparent;
    /* Mantener el fondo transparente en todos los estados */
    text-decoration: none;
    /* Mantener la decoración del texto desactivada en todos los estados */
    outline: none;
    /* Eliminar el contorno al hacer foco */
    box-shadow: none;
    /* Eliminar la sombra al hacer clic */
  }

  .nav-link {
    color: var(--blanco) !important;

    &:hover {
      color: var(--vino) !important;
    }

    &:active {
      color: var(--negro) !important;
    }
  }

  /**btn burguer*/
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255, 255, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
  }

  .navbar-toggler {
    color: transparent;
    outline: none;
    border: none;
  }

  .navbar-toggler:focus {
    outline: none;
    border: none;
  }

  .bg-black {
    color: #4b1900 !important;
  }

  .btn-outline-light {
    background-color: var(--vino);
    border-radius: 5px;
    color: var(--blanco) !important;
    &:hover {
      background-color: var(--blanco) !important;
      color: var(--negro) !important;
    }
  }

  .bi {
    margin-right: 5px;
  }
</style>

<script>
  import $ from "jquery";

  var header = $("#header");

  // Al hacer scroll
  $(window).scroll(function () {
    var scroll = $(window).scrollTop();

    // Si el scroll es mayor a 100px, añadir la clase con fondo negro
    if (scroll > 100) {
      header.addClass("bg-black");
    } else {
      header.removeClass("bg-black");
    }
  });
</script>
