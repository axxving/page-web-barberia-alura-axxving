<style>
  #header {
    background-color: transparent;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    transition: background-color 0s ease, transform 1s ease;
  }

  #header.scrolled {
    background-color: var(
      --negro
    ); /* Cambia el color a verde al hacer scroll */
    animation: slideDown 0.3s ease forwards;
  }

  @keyframes slideDown {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(0);
    }
  }

  .nav-link {
    color: var(--blanco);
  }

  /*-- btn burguer --*/
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255, 255, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
  }

  .navbar-toggler {
    color: transparent !important;
    outline: none;
    border: none;
  }

  .navbar-toggler:focus {
    outline: none;
    border: none;
  }

  .navbar-collapse {
    background-color: transparent;
  }

  /*TODO Media Querys*/
  /*? Para pantallas extra pequeñas y pequeñas */
  @media (max-width: 575.98px) {
    .navbar-collapse {
      background-color: var(--negro);
      padding: 0px 10px 10px 10px;
    }
  }

  /*? Para pantallas medianas */
  @media (min-width: 576px) and (max-width: 767.98px) {
    .navbar-collapse {
      background-color: var(--negro);
      padding: 0px 10px 10px 10px;
    }
  }

  /*? Para pantallas grandes */
  @media (min-width: 768px) and (max-width: 991.98px) {
    .navbar-collapse {
      background-color: var(--negro);
      padding: 0px 10px 10px 10px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var header = document.getElementById("header");
    var isHeaderHidden = false;

    window.addEventListener("scroll", function () {
      if (window.scrollY > 50 && !isHeaderHidden) {
        header.classList.add("scrolled");
        isHeaderHidden = true;
      } else if (window.scrollY <= 50 && isHeaderHidden) {
        header.classList.remove("scrolled");
        isHeaderHidden = false;
      }
    });
  });
</script>
