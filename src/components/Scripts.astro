<script>
  import "bootstrap/dist/css/bootstrap.min.css";
  import "bootstrap/dist/js/bootstrap.bundle.min.js";

  // Importando scroll reveal
  import ScrollReveal from "scrollreveal";

  // Inicializar ScrollReveal
  const sr = ScrollReveal({
    origin: "bottom", // Desde la parte inferior
    distance: "30px", // Distancia de revelación
    duration: 800, // Duración de la animación ajustada para una sensación más suave
    delay: 300, // Retraso antes de la animación reducido para que los elementos aparezcan más rápido
    easing: "ease-in-out", // Función de aceleración para una apariencia más suave y natural
  });

  sr.reveal("p, h2, .card, select, input, option", {
    distance: "30px", // Distancia de revelación
  });
</script>
